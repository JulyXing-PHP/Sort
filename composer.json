{
    "repositories": [
        {
            "type": "composer",
            "url": "http://packagist.phpcomposer.com"
        },
        {
            "packagist": false
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.5.4",
        "squizlabs/php_codesniffer": "1.5.*"
    },
    "autoload": {
        "psr-4": {
            "Sort\\": ""
        }
    },
    "config": {
        "vendor-dir": "include",
        "bin-dir": "sbin",
        "secure-http": false
    }
}